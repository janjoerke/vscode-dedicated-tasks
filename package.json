{
  "name": "dedicated-tasks",
  "displayName": "Dedicated tasks",
  "description": "Organize VS Code tasks with hierarchical groups, icons, and status bar quick-access",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/dedicated-tasks"
  },
  "keywords": [
    "tasks",
    "task runner",
    "productivity",
    "organization",
    "status bar",
    "task manager"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dedicatedTasks",
          "title": "Dedicated Tasks",
          "icon": "resources/tasks-icon.svg"
        }
      ]
    },
    "views": {
      "dedicatedTasks": [
        {
          "id": "dedicatedTasks.tasksView",
          "name": "Tasks",
          "icon": "resources/tasks-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "dedicatedTasks.refresh",
        "title": "Refresh Tasks",
        "icon": "$(refresh)"
      },
      {
        "command": "dedicatedTasks.runTask",
        "title": "Run Task",
        "icon": "$(play)"
      },
      {
        "command": "dedicatedTasks.configureStatusBar",
        "title": "Configure Status Bar Tasks",
        "icon": "$(settings-gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dedicatedTasks.refresh",
          "when": "view == dedicatedTasks.tasksView",
          "group": "navigation"
        },
        {
          "command": "dedicatedTasks.configureStatusBar",
          "when": "view == dedicatedTasks.tasksView",
          "group": "navigation"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": ".vscode/tasks.json",
        "url": "./schemas/tasks-schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "esbuild": "^0.19.11",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
}
