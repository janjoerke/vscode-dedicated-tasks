{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "options": {
            "type": "object",
            "properties": {
              "dedicatedTasksUi": {
                "type": "object",
                "description": "Configuration for Dedicated Tasks UI extension",
                "properties": {
                  "label": {
                    "type": "string",
                    "description": "Display label for the task in Dedicated Tasks UI"
                  },
                  "detail": {
                    "type": "string",
                    "description": "Additional detail text shown below the task label"
                  },
                  "hide": {
                    "type": "boolean",
                    "description": "Whether to hide this task from Dedicated Tasks UI",
                    "default": false
                  },
                  "groups": {
                    "type": "array",
                    "description": "Array of group paths. Each path is an array of strings representing a hierarchy. Tasks can appear in multiple locations.",
                    "items": {
                      "oneOf": [
                        {
                          "type": "string",
                          "description": "Single-level group name"
                        },
                        {
                          "type": "array",
                          "description": "Multi-level group path (e.g., ['Build', 'Frontend'])",
                          "items": {
                            "type": "string"
                          },
                          "minItems": 1
                        }
                      ]
                    },
                    "minItems": 1
                  },
                  "order": {
                    "type": "number",
                    "description": "Sort order within the group (lower numbers appear first)",
                    "default": 0
                  }
                },
                "required": ["groups"]
              }
            }
          }
        }
      }
    }
  }
}
