{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "configurations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "request": {
            "type": "string"
          },
          "dedicatedTasks": {
            "type": "object",
            "description": "Configuration for Dedicated Tasks extension",
            "properties": {
              "label": {
                "type": "string",
                "description": "Display label for the launch configuration in Dedicated Tasks"
              },
              "detail": {
                "type": "string",
                "description": "Additional detail text shown below the configuration label"
              },
              "hide": {
                "type": "boolean",
                "description": "Whether to hide this configuration from Dedicated Tasks",
                "default": false
              },
              "groups": {
                "type": "array",
                "description": "Array of group paths. Each path is an array of strings representing a hierarchy. Configurations can appear in multiple locations.",
                "items": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "Single-level group name"
                    },
                    {
                      "type": "array",
                      "description": "Multi-level group path (e.g., ['Debug', 'Frontend'])",
                      "items": {
                        "type": "string"
                      },
                      "minItems": 1
                    }
                  ]
                },
                "minItems": 1
              },
              "order": {
                "type": "number",
                "description": "Sort order within the group (lower numbers appear first)",
                "default": 0
              }
            },
            "required": ["groups"]
          }
        }
      }
    }
  }
}
